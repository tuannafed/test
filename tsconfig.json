{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@public/*": ["../public/*"],
      "@mockData/*": ["../mockData/*"]
    },
    "types": ["node"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false
  },
  "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "config.js"],
  "exclude": ["node_modules"],
  "files": ["global.d.ts"]
}
